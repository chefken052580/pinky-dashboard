/**
 * Bug Submission Form Styles
 * Purple/Blue gradient theme matching PinkyBot dashboard
 */

/* Modal Overlay */
.bug-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bug-modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(4px);
}

/* Modal Content */
.bug-modal-content {
  position: relative;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border: 1px solid #00d4ff;
  border-radius: 12px;
  width: 90%;
  max-width: 700px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 8px 32px rgba(0, 212, 255, 0.3);
  z-index: 10001;
}

/* Modal Header */
.bug-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid rgba(0, 212, 255, 0.3);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(0, 212, 255, 0.1) 100%);
}

.bug-modal-header h2 {
  margin: 0;
  font-size: 24px;
  background: linear-gradient(90deg, #00d4ff 0%, #667eea 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.bug-close-btn {
  background: none;
  border: none;
  color: #00d4ff;
  font-size: 32px;
  cursor: pointer;
  line-height: 1;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

.bug-close-btn:hover {
  transform: scale(1.2) rotate(90deg);
  color: #667eea;
}

/* Form Styles */
.bug-form {
  padding: 24px;
}

.bug-form-group {
  margin-bottom: 20px;
}

.bug-form-group label {
  display: block;
  margin-bottom: 8px;
  color: #00d4ff;
  font-weight: 500;
  font-size: 14px;
}

.required {
  color: #ff4444;
}

.bug-form-group input[type="text"],
.bug-form-group input[type="email"],
.bug-form-group textarea,
.bug-form-group select {
  width: 100%;
  padding: 12px;
  background: rgba(26, 26, 46, 0.5);
  border: 1px solid rgba(0, 212, 255, 0.3);
  border-radius: 6px;
  color: #ffffff;
  font-size: 14px;
  font-family: inherit;
  transition: all 0.3s ease;
}

.bug-form-group input:focus,
.bug-form-group textarea:focus,
.bug-form-group select:focus {
  outline: none;
  border-color: #00d4ff;
  box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
}

.bug-form-group textarea {
  resize: vertical;
  min-height: 80px;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 12px;
  color: #888;
  margin-top: 4px;
}

/* Steps List */
.steps-list {
  margin-bottom: 12px;
}

.step-item {
  display: flex;
  gap: 8px;
  margin-bottom: 8px;
}

.step-input {
  flex: 1;
}

.remove-step-btn {
  background: rgba(255, 68, 68, 0.2);
  border: 1px solid #ff4444;
  color: #ff4444;
  width: 32px;
  height: 38px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 20px;
  line-height: 1;
  transition: all 0.2s ease;
}

.remove-step-btn:hover {
  background: #ff4444;
  color: white;
}

.add-step-btn {
  background: linear-gradient(135deg, #667eea 0%, #00d4ff 100%);
  border: none;
  color: white;
  padding: 8px 16px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.add-step-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
}

/* Environment Info */
.environment-info {
  background: rgba(0, 212, 255, 0.05);
  border: 1px solid rgba(0, 212, 255, 0.2);
  border-radius: 6px;
  padding: 12px;
}

.env-item {
  display: flex;
  gap: 8px;
  margin-bottom: 4px;
  font-size: 14px;
}

.env-item:last-child {
  margin-bottom: 0;
}

.env-item strong {
  color: #00d4ff;
  min-width: 80px;
}

/* Attachment Area */
.attachment-area {
  background: rgba(0, 212, 255, 0.05);
  border: 2px dashed rgba(0, 212, 255, 0.3);
  border-radius: 6px;
  padding: 16px;
  text-align: center;
}

.attachment-btn {
  background: linear-gradient(135deg, #667eea 0%, #00d4ff 100%);
  border: none;
  color: white;
  padding: 10px 20px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
}

.attachment-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
}

.attachment-hint {
  margin-top: 8px;
  font-size: 12px;
  color: #888;
}

.attachment-preview {
  margin-top: 16px;
}

.attachment-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px;
  background: rgba(26, 26, 46, 0.5);
  border: 1px solid rgba(0, 212, 255, 0.2);
  border-radius: 6px;
  margin-bottom: 8px;
}

.attachment-icon {
  font-size: 24px;
}

.attachment-name {
  flex: 1;
  color: #ffffff;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.attachment-size {
  color: #888;
  font-size: 12px;
}

.remove-attachment {
  background: rgba(255, 68, 68, 0.2);
  border: 1px solid #ff4444;
  color: #ff4444;
  width: 28px;
  height: 28px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 18px;
  line-height: 1;
  transition: all 0.2s ease;
}

.remove-attachment:hover {
  background: #ff4444;
  color: white;
}

/* Duplicate Warning */
.duplicate-warning {
  background: rgba(255, 152, 0, 0.1);
  border: 1px solid rgba(255, 152, 0, 0.3);
  border-radius: 6px;
  padding: 16px;
  margin-bottom: 20px;
}

.duplicate-warning h4 {
  margin: 0 0 12px 0;
  color: #ff9800;
  font-size: 16px;
}

.duplicate-warning p {
  margin: 0 0 12px 0;
  color: #ffffff;
  font-size: 14px;
}

.duplicate-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px;
  background: rgba(26, 26, 46, 0.5);
  border: 1px solid rgba(255, 152, 0, 0.2);
  border-radius: 6px;
  margin-bottom: 8px;
}

.duplicate-item strong {
  flex: 1;
  color: #ffffff;
  font-size: 14px;
}

.similarity {
  color: #ff9800;
  font-size: 12px;
  font-weight: 600;
}

.status-badge {
  background: rgba(0, 212, 255, 0.2);
  color: #00d4ff;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 11px;
  text-transform: uppercase;
}

/* Form Actions */
.bug-form-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 24px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 212, 255, 0.2);
}

.btn-primary,
.btn-secondary {
  padding: 12px 24px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #00d4ff 100%);
  color: white;
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 212, 255, 0.4);
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.3);
}

/* Submission Status */
.submission-status {
  margin-top: 16px;
  padding: 12px;
  border-radius: 6px;
  text-align: center;
  font-size: 14px;
}

.submission-status.success {
  background: rgba(76, 175, 80, 0.1);
  border: 1px solid rgba(76, 175, 80, 0.3);
  color: #4caf50;
}

.submission-status.error {
  background: rgba(244, 67, 54, 0.1);
  border: 1px solid rgba(244, 67, 54, 0.3);
  color: #f44336;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .bug-modal-content {
    width: 95%;
    max-height: 95vh;
  }
  
  .bug-modal-header {
    padding: 16px;
  }
  
  .bug-modal-header h2 {
    font-size: 20px;
  }
  
  .bug-form {
    padding: 16px;
  }
  
  .bug-form-actions {
    flex-direction: column;
  }
  
  .btn-primary,
  .btn-secondary {
    width: 100%;
  }
  
  .step-item {
    flex-direction: column;
  }
  
  .remove-step-btn {
    width: 100%;
  }
}
