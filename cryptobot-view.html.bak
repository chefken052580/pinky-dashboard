<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>CryptoBot - PinkyBot</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #0f172a;
      color: white;
      display: flex;
      height: 100vh;
    }
    .sidebar {
      width: 280px;
      background: #1e293b;
      padding: 20px;
      border-right: 2px solid #334155;
      overflow-y: auto;
    }
    .main-content {
      flex: 1;
      padding: 30px;
      overflow-y: auto;
    }
    h1 { color: #a78bfa; margin-bottom: 20px; }
    .menu-item {
      padding: 12px;
      margin: 8px 0;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s;
    }
    .menu-item:hover {
      background: #334155;
    }
    .menu-item.active {
      background: #6366f1;
    }
    .card {
      background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 20px;
    }
    .stat-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      margin-bottom: 30px;
    }
    .stat-card {
      background: #1e293b;
      padding: 20px;
      border-radius: 8px;
      border-left: 4px solid #10b981;
    }
    .stat-value {
      font-size: 32px;
      font-weight: bold;
      margin: 10px 0;
    }
    .stat-label {
      color: #94a3b8;
      font-size: 14px;
    }
    .price-alert {
      padding: 15px;
      background: rgba(239,68,68,0.2);
      border-left: 4px solid #ef4444;
      border-radius: 4px;
      margin: 10px 0;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <h2>ğŸ’ CryptoBot</h2>
    <div class="menu-item active" onclick="showView('dashboard')">ğŸ“Š Dashboard</div>
    <div class="menu-item" onclick="showView('wallets')">ğŸ” Wallets</div>
    <div class="menu-item" onclick="showView('prices')">ğŸ’° Price Tracker</div>
    <div class="menu-item" onclick="showView('alerts')">ğŸ”” Alerts</div>
    <div class="menu-item" onclick="showView('portfolio')">ğŸ“ˆ Portfolio</div>
    <div class="menu-item" onclick="showView('defi')">ğŸŒ DeFi</div>
    <div class="menu-item" onclick="showView('settings')">âš™ï¸ Settings</div>
  </div>

  <div class="main-content" id="mainContent">
    <h1>CryptoBot Dashboard</h1>
    
    <div class="stat-grid">
      <div class="stat-card">
        <div class="stat-label">Total Portfolio</div>
        <div class="stat-value">$12,543.21</div>
        <div style="color:#10b981;">+5.2% (24h)</div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Connected Wallets</div>
        <div class="stat-value">3</div>
        <div style="color:#94a3b8;">Phantom, MetaMask, Trust</div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Active Alerts</div>
        <div class="stat-value">7</div>
        <div style="color:#f59e0b;">2 triggered today</div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Gas Tracker</div>
        <div class="stat-value">42 Gwei</div>
        <div style="color:#10b981;">Low congestion</div>
      </div>
    </div>

    <div class="card">
      <h2>ğŸš¨ Recent Alerts</h2>
      <div class="price-alert">
        <strong>BTC</strong> broke above $45,000 â€” Price alert triggered at 14:32 EST
      </div>
      <div class="price-alert">
        <strong>ETH</strong> dropped below $2,500 â€” Price alert triggered at 09:15 EST
      </div>
    </div>

    <div class="card">
      <h2>ğŸ’¹ Top Holdings</h2>
      <table style="width:100%; margin-top:15px;">
        <tr>
          <th style="text-align:left;">Asset</th>
          <th style="text-align:right;">Amount</th>
          <th style="text-align:right;">Value</th>
          <th style="text-align:right;">24h Change</th>
        </tr>
        <tr style="border-bottom:1px solid #334155; height:40px;">
          <td>BTC</td>
          <td style="text-align:right;">0.2543</td>
          <td style="text-align:right;">$11,443.50</td>
          <td style="text-align:right; color:#10b981;">+3.2%</td>
        </tr>
        <tr style="border-bottom:1px solid #334155; height:40px;">
          <td>ETH</td>
          <td style="text-align:right;">2.45</td>
          <td style="text-align:right;">$6,125.00</td>
          <td style="text-align:right; color:#ef4444;">-1.5%</td>
        </tr>
        <tr style="height:40px;">
          <td>PINKY</td>
          <td style="text-align:right;">5,000</td>
          <td style="text-align:right;">$500.00</td>
          <td style="text-align:right; color:#10b981;">+12.8%</td>
        </tr>
      </table>
    </div>
  </div>

  <script>
    function showView(view) {
      // Update active menu item
      document.querySelectorAll('.menu-item').forEach(item => {
        item.classList.remove('active');
      });
      event.target.classList.add('active');
      
      // Update main content
      const content = document.getElementById('mainContent');
      
      const views = {
        dashboard: 'CryptoBot Dashboard (shown above)',
        wallets: '<h1>ğŸ” Wallet Management</h1><p>Connect and manage multiple crypto wallets...</p>',
        prices: '<h1>ğŸ’° Price Tracker</h1><p>Real-time cryptocurrency prices...</p>',
        alerts: '<h1>ğŸ”” Price Alerts</h1><p>Set custom price alerts for your favorite coins...</p>',
        portfolio: '<h1>ğŸ“ˆ Portfolio Analytics</h1><p>Track performance and allocation...</p>',
        defi: '<h1>ğŸŒ DeFi Dashboard</h1><p>Monitor DeFi positions and yields...</p>',
        settings: '<h1>âš™ï¸ Settings</h1><p>Configure CryptoBot preferences...</p>'
      };
      
      if (view !== 'dashboard') {
        content.innerHTML = views[view] || '<h1>Coming Soon</h1>';
      }
    }
  </script>
</body>
</html>
